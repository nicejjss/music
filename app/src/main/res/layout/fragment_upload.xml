<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Song"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:paddingBottom="20dp" />

    <EditText
        android:id="@+id/songTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Song Title"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/artistName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Artist Name"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:inputType="text" />

    <Button
        android:id="@+id/selectAudioBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Audio File"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/selectImageBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:id="@+id/songImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        android:contentDescription="Album Cover" />

    <TextView
        android:id="@+id/displaySongInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Song information will be displayed here"
        android:textSize="16sp"
        android:layout_marginBottom="20dp" />

    <ProgressBar
        android:id="@+id/uploadProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <Button
        android:id="@+id/uploadSongBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Song" />

</LinearLayout>